<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackTransparent65">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/me_information_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_me_avatar_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/me_ic_user_empty_white_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_me_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="5dp"
                android:text="Người dùng"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_me_avatar_user"
                app:layout_constraintStart_toEndOf="@+id/img_me_avatar_user"
                app:layout_constraintTop_toTopOf="@+id/img_me_avatar_user" />

            <Button
                android:id="@+id/btn_me_login"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/me_bg_button_login"
                android:text="Đăng xuất"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.96"
                app:layout_constraintStart_toEndOf="@+id/img_me_avatar_user"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/blackTransparent10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="6dp"
            android:text="Tiện ích"
            android:textColor="@color/blackTransparent60"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blackTransparent10" />

        <TextView
            android:id="@+id/txt_me_select_add_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/me_ic_add_black_24"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Thêm địa điểm"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/blackTransparent10" />

        <TextView
            android:id="@+id/lbl_title_add_store_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="6dp"
            android:text="Thông tin ứng dụng"
            android:textColor="@color/blackTransparent60"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blackTransparent10" />

        <TextView
            android:id="@+id/txt_me_select_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/me_ic_star_rating_24"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Đánh giá ứng dụng"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blackTransparent10" />

        <TextView
            android:id="@+id/txt_me_select_send_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/me_ic_email_24"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="Góp ý / Liên hệ"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blackTransparent10" />

        <TextView
            android:id="@+id/txt_me_select_show_infor_dev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/me_ic_information_24"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Thông tin tác giả"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blackTransparent10" />
    </LinearLayout>
</LinearLayout>